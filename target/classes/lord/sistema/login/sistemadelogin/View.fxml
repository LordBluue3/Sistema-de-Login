<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="310.0" prefWidth="323.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lord.sistema.login.sistemadelogin.controlador.ViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane fx:id="fxmlLoader" prefHeight="325.0" prefWidth="383.0">
      <TextField fx:id="txtLogin" layoutX="100.0" layoutY="77.0" promptText="Email"/>
      <TextField fx:id="txtSenha" layoutX="100.0" layoutY="129.0" promptText="Senha"/>
      <Button fx:id="btnLogin" layoutX="198.0" layoutY="202.0" mnemonicParsing="false" onAction="#onBtnLoginAction"
              text="Logar"/>
      <Label fx:id="labelTitulo" layoutX="62.0" layoutY="14.0" text="Sistema de Login">
         <font>
            <Font size="17.0"/>
         </font>
      </Label>
      <Label fx:id="labelLogin" layoutX="35.0" layoutY="82.0" text="Login: "/>
      <Label fx:id="labelSenha" layoutX="35.0" layoutY="133.0" text="Senha: "/>
   </AnchorPane>
</VBox>
